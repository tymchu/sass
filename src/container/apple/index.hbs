<div class='page'>
	<div class='header'>
			{{#with header}}
			<header class='header--content'>
				<div class="header--block">
					<img src='/svg/apple.svg' alt='Aplle' class='header--icon' />
					<nav class='header--block'>
						{{#each links}}
							<a href="{{url}}" class="header--link">{{text}}</a>
						{{/each}}
					</nav>
				</div>
				<div class="header--block">
					<img src='/svg/search.svg' alt='Search' class='header--icon' />
					<img src='/svg/profile.svg' alt='Profile' class='header--icon' />
				</div>
			</header>		
			{{/with}}					
		</div>
	</div>
	<div class='lower--header'>
			{{#with ad}}
				<div class="ad--title">{{title}}
					{{#with link}}
					<div class="lower--header--right">
						<a href="{{url}}" class="header--text">{{text}}</a>
						<img class="arrow" src='/svg/arrow.svg' alt='Profile' class='header--icon' />
					</div>
					{{/with}}
				</div>
			{{/with}}
		</div>

